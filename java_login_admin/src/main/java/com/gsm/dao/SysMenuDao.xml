<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsm.dao.SysMenuDao">

    <resultMap type="com.gsm.entity.SysMenu" id="SysMenuMap">
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
        <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
        <result property="menuCode" column="menu_code" jdbcType="VARCHAR"/>
        <result property="menuPid" column="menu_pid" jdbcType="INTEGER"/>
        <result property="showOrder" column="show_order" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysMenuMap">
        select
          menu_id, menu_name, menu_code, menu_pid, show_order
        from wyxjava.sys_menu
        where menu_id = #{menuId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysMenuMap">
        select
          menu_id, menu_name, menu_code, menu_pid, show_order
        from wyxjava.sys_menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysMenuMap">
        select
          menu_id, menu_name, menu_code, menu_pid, show_order
        from wyxjava.sys_menu
        <where>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
            <if test="menuName != null and menuName != ''">
                and menu_name = #{menuName}
            </if>
            <if test="menuCode != null and menuCode != ''">
                and menu_code = #{menuCode}
            </if>
            <if test="menuPid != null">
                and menu_pid = #{menuPid}
            </if>
            <if test="showOrder != null">
                and show_order = #{showOrder}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="menuId" useGeneratedKeys="true">
        insert into wyxjava.sys_menu(menu_name, menu_code, menu_pid, show_order)
        values (#{menuName}, #{menuCode}, #{menuPid}, #{showOrder})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wyxjava.sys_menu
        <set>
            <if test="menuName != null and menuName != ''">
                menu_name = #{menuName},
            </if>
            <if test="menuCode != null and menuCode != ''">
                menu_code = #{menuCode},
            </if>
            <if test="menuPid != null">
                menu_pid = #{menuPid},
            </if>
            <if test="showOrder != null">
                show_order = #{showOrder},
            </if>
        </set>
        where menu_id = #{menuId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wyxjava.sys_menu where menu_id = #{menuId}
    </delete>

</mapper>