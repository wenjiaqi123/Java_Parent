<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsm.dao.QuestionAnswerDao">

    <resultMap type="com.gsm.entity.QuestionAnswer" id="QuestionAnswerMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="question" column="question" jdbcType="VARCHAR"/>
        <result property="questionUrl" column="question_url" jdbcType="VARCHAR"/>
        <result property="answer" column="answer" jdbcType="VARCHAR"/>
        <result property="answerUrl" column="answer_url" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="QuestionAnswerMap">
        select
          id, question, question_url, answer, answer_url
        from wyxjava.question_answer
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="QuestionAnswerMap">
        select
          id, question, question_url, answer, answer_url
        from wyxjava.question_answer
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="QuestionAnswerMap">
        select
          id, question, question_url, answer, answer_url
        from wyxjava.question_answer
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="question != null and question != ''">
                and question = #{question}
            </if>
            <if test="questionUrl != null and questionUrl != ''">
                and question_url = #{questionUrl}
            </if>
            <if test="answer != null and answer != ''">
                and answer = #{answer}
            </if>
            <if test="answerUrl != null and answerUrl != ''">
                and answer_url = #{answerUrl}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into wyxjava.question_answer(question, question_url, answer, answer_url)
        values (#{question}, #{questionUrl}, #{answer}, #{answerUrl})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wyxjava.question_answer
        <set>
            <if test="question != null and question != ''">
                question = #{question},
            </if>
            <if test="questionUrl != null and questionUrl != ''">
                question_url = #{questionUrl},
            </if>
            <if test="answer != null and answer != ''">
                answer = #{answer},
            </if>
            <if test="answerUrl != null and answerUrl != ''">
                answer_url = #{answerUrl},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wyxjava.question_answer where id = #{id}
    </delete>

</mapper>