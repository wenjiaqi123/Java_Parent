<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsm.dao.FeedbackDao">

    <resultMap type="com.gsm.entity.Feedback" id="FeedbackMap">
        <result property="feedbackId" column="feedback_id" jdbcType="INTEGER"/>
        <result property="feedbackType" column="feedback_type" jdbcType="INTEGER"/>
        <result property="feedbackDesc" column="feedback_desc" jdbcType="VARCHAR"/>
        <result property="iphoneNo" column="iphone_no" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="FeedbackMap">
        select
          feedback_id, feedback_type, feedback_desc, iphone_no, email, status
        from wyxjava.feedback
        where feedback_id = #{feedbackId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="FeedbackMap">
        select
          feedback_id, feedback_type, feedback_desc, iphone_no, email, status
        from wyxjava.feedback
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="FeedbackMap">
        select
          feedback_id, feedback_type, feedback_desc, iphone_no, email, status
        from wyxjava.feedback
        <where>
            <if test="feedbackId != null">
                and feedback_id = #{feedbackId}
            </if>
            <if test="feedbackType != null">
                and feedback_type = #{feedbackType}
            </if>
            <if test="feedbackDesc != null and feedbackDesc != ''">
                and feedback_desc = #{feedbackDesc}
            </if>
            <if test="iphoneNo != null and iphoneNo != ''">
                and iphone_no = #{iphoneNo}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="feedbackId" useGeneratedKeys="true">
        insert into wyxjava.feedback(feedback_type, feedback_desc, iphone_no, email, status)
        values (#{feedbackType}, #{feedbackDesc}, #{iphoneNo}, #{email}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wyxjava.feedback
        <set>
            <if test="feedbackType != null">
                feedback_type = #{feedbackType},
            </if>
            <if test="feedbackDesc != null and feedbackDesc != ''">
                feedback_desc = #{feedbackDesc},
            </if>
            <if test="iphoneNo != null and iphoneNo != ''">
                iphone_no = #{iphoneNo},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where feedback_id = #{feedbackId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wyxjava.feedback where feedback_id = #{feedbackId}
    </delete>

</mapper>