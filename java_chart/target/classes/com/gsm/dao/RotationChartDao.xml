<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsm.dao.RotationChartDao">

    <resultMap type="com.gsm.entity.RotationChart" id="RotationChartMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="chartUrl" column="chart_url" jdbcType="VARCHAR"/>
        <result property="webUrl" column="web_url" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RotationChartMap">
        select
          id, chart_url, web_url, status
        from wyxjava.rotation_chart
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RotationChartMap">
        select
          id, chart_url, web_url, status
        from wyxjava.rotation_chart
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RotationChartMap">
        select
          id, chart_url, web_url, status
        from wyxjava.rotation_chart
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="chartUrl != null and chartUrl != ''">
                and chart_url = #{chartUrl}
            </if>
            <if test="webUrl != null and webUrl != ''">
                and web_url = #{webUrl}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into wyxjava.rotation_chart(chart_url, web_url, status)
        values (#{chartUrl}, #{webUrl}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wyxjava.rotation_chart
        <set>
            <if test="chartUrl != null and chartUrl != ''">
                chart_url = #{chartUrl},
            </if>
            <if test="webUrl != null and webUrl != ''">
                web_url = #{webUrl},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wyxjava.rotation_chart where id = #{id}
    </delete>

    <select id="selectCharts" parameterType="RotationChart" resultType="RotationChart">
        select t.chart_id,
               t.chart_url,
               t.web_url,
               t.status
        from rotation_chart t
        <where>
            <if test="chartId != null">
                and chart_id = #{chartId}
            </if>
            <if test="chartUrl != null and chartUrl != ''">
                and chart_url = #{chartUrl}
            </if>
            <if test="webUrl != null and webUrl != ''">
                and web_url = #{webUrl}
            </if>
            <if test="status != -1">
                and status = #{status}
            </if>
        </where>
    </select>
</mapper>