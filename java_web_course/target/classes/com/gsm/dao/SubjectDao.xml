<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsm.dao.SubjectDao">

    <resultMap type="com.gsm.entity.Subject" id="SubjectMap">
        <result property="subjectId" column="subject_id" jdbcType="INTEGER"/>
        <result property="subjectName" column="subject_name" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SubjectMap">
        select
          subject_id, subject_name, status
        from wyxjava.subject
        where subject_id = #{subjectId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SubjectMap">
        select
          subject_id, subject_name, status
        from wyxjava.subject
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SubjectMap">
        select
          subject_id, subject_name, status
        from wyxjava.subject
        <where>
            <if test="subjectId != null">
                and subject_id = #{subjectId}
            </if>
            <if test="subjectName != null and subjectName != ''">
                and subject_name = #{subjectName}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="subjectId" useGeneratedKeys="true">
        insert into wyxjava.subject(subject_name, status)
        values (#{subjectName}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wyxjava.subject
        <set>
            <if test="subjectName != null and subjectName != ''">
                subject_name = #{subjectName},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where subject_id = #{subjectId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wyxjava.subject where subject_id = #{subjectId}
    </delete>

</mapper>