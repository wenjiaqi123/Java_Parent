<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsm.dao.CourseDao">

    <!--查询数据-->
    <select id="courseLists" parameterType="Course" resultType="Course">
        select t.chart_id,
        t.chart_url,
        t.web_url,
        t.status
        from rotation_chart t
        <where>
            <if test="chartId != null">
                and chart_id = #{chartId}
            </if>
            <if test="chartUrl != null and chartUrl != ''">
                and chart_url = #{chartUrl}
            </if>
            <if test="webUrl != null and webUrl != ''">
                and web_url = #{webUrl}
            </if>
            <if test="status != -1">
                and status = #{status}
            </if>
        </where>
        order by t.status desc,chart_id desc
    </select>

</mapper>