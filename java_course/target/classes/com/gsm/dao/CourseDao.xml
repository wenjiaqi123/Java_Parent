<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsm.dao.CourseDao">

    <resultMap type="com.gsm.entity.Course" id="CourseMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="courseName" column="course_name" jdbcType="VARCHAR"/>
        <result property="subjectId" column="subject_id" jdbcType="INTEGER"/>
        <result property="showOrder" column="show_order" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CourseMap">
        select
          id, course_name, subject_id, show_order, status
        from wyxjava.course
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CourseMap">
        select
          id, course_name, subject_id, show_order, status
        from wyxjava.course
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CourseMap">
        select
          id, course_name, subject_id, show_order, status
        from wyxjava.course
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="courseName != null and courseName != ''">
                and course_name = #{courseName}
            </if>
            <if test="subjectId != null">
                and subject_id = #{subjectId}
            </if>
            <if test="showOrder != null">
                and show_order = #{showOrder}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into wyxjava.course(course_name, subject_id, show_order, status)
        values (#{courseName}, #{subjectId}, #{showOrder}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wyxjava.course
        <set>
            <if test="courseName != null and courseName != ''">
                course_name = #{courseName},
            </if>
            <if test="subjectId != null">
                subject_id = #{subjectId},
            </if>
            <if test="showOrder != null">
                show_order = #{showOrder},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wyxjava.course where id = #{id}
    </delete>

</mapper>